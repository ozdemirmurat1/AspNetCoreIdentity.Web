@model List<AdminModel.AssignRoleToUserViewModel>

<h1>AssignRoleToUser</h1>

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2>Kullanıcıya Rol Atama</h2>
        @if (ViewData["SuccessMessage"] != null)
        {
            <div class="alert alert-info" role="alert">
                @ViewData["SuccessMessage"]
            </div>
        }
        <form asp-action="AssignRoleToUser" asp-route-userId="@ViewBag.userId" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="@Model[i].Exist">
                    <label class="form-check-label" for="flexCheckDefault">
                        @Model[i].Name
                    </label>
                    <input type="hidden" asp-for="@Model[i].Name">
                    <input type="hidden" asp-for="@Model[i].Id">
                </div>
            }
            
            <div class="form-group mt-3">
                <input type="submit" value="Rol Ata" class="btn btn-primary" />
            </div>
        </form>

        <div class="mt-3">
            <a asp-controller="Home" asp-action="UserList">Kullanıcı listesine geri dön</a>
        </div>
    </div>


</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
